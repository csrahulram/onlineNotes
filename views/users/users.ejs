<% include ../header.ejs%>

<div class="container">
    <div class="user_info">
        <h2>Hello !, <%= username %> <span><a href="/users/logout" class="btn btn-primary" >Logout</a> </span></h2>
    </div>
    <div class="row">
    <div class="col-lg-4">
        <div class="link">
          <h2>Create your Notes :</h2>
        </div>
        <div class="create_notes">
            <form action="/users/create/notes" method="post">
                <div class="noteholder">
                    <textarea rows="5" cols="50" name="contents"></textarea>
                </div>
                <div class="noteholder">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> create</button>
                </div>
            </form>
        </div>
    </div>
       <div class="col-lg-8">
           <h2> Your Notes :</h2>

           <div class="row">
               <% notes.forEach(function(note, index){ %>
                <div class="col-lg-3">
                    <div class="link">
                        <nav>
                            <a href='/users/notes/actions/trash/<%= note._id%>'><i class="fa fa-trash"></i></a>
                            <a href='javascript:void(0)' id="update_btn<%=index%>" class="u"><i class="fa fa-pencil-square"></i></a>
                            <div class="<%=index%> edit_block">
                                <form action="/users/notes/actions/update/<%=note._id%>" method="post">
                                   <div class="noteholder">
                                       <textarea name="contents" cols="20" rows="4" ><%= note.notes %></textarea>
                                   </div>
                                    <div class="noteholder">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </form>
                            </div>



                        </nav>
                    </div>
                   <%= note.notes%>
                </div>
               <%});%>
           </div>
       </div>
    </div>

</div>

<% include ../footer.ejs%>