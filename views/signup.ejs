<div class="signup_form">
    <h2>signup :</h2>

    <form method="post" action="/signup">
        <div class="form_holder">
            <input type="text" name="fullname" class="form-control" placeholder="your fullname" required>
        </div>
        <div class="form_holder">
            <input type="email" name="email" class="form-control" placeholder="email@your.com" required>
        </div>
        <div class="form_holder">
            <input type="password" name="password" class="form-control" placeholder="password" required>
        </div>
        <div class="form_holder">
            <button type="submit" class="btn btn-primary">Signup</button>
            <a href="javascript:void(0)" class="btn btn-primary" id="login_btn">Login</a>
        </div>
    </form>
</div>